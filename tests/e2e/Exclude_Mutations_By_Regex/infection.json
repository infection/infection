{
    "$schema": "../../../resources/schema.json",
    "timeout": 25,
    "source": {
        "directories": [
            "src"
        ]
    },
    "logs": {
        "summary": "infection.log"
    },
    "tmpDir": ".",
    "mutators": {
        "global-ignoreSourceCodeByRegex": [
            ".*hello.*",
            "\\$this->logger->.*"
        ],
        "ArrayItemRemoval": true,
        "PublicVisibility": {
            "ignore": [
                "App\\*"
            ],
            "ignoreSourceCodeByRegex": [
                ".*getString.*"
            ]
        },
        "MethodCallRemoval": {
            "ignoreSourceCodeByRegex": [
                "Assert::.*",
                "\\$this->getString\\(\\);"
            ]
        }
    }
}
